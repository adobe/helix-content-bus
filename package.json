{
  "name": "@adobe/helix-content-bus",
  "version": "1.1.3",
  "private": true,
  "description": "Helix Content Bus",
  "main": "src/index.js",
  "scripts": {
    "test": " nyc mocha -i -g 'Post-Deploy'",
    "test-ci": "nyc mocha -i -g 'Post-Deploy' --reporter xunit --reporter-options output=./junit/test-results.xml && codecov",
    "test-postdeploy": "mocha --reporter xunit --reporter-options output=./junit/test-results.xml -g 'Post-Deploy'",
    "lint": "eslint .",
    "semantic-release": "semantic-release",
    "docs": "npx jsdoc2md -c .jsdoc.json --files 'src/*.js'  > docs/API.md",
    "commit": "git-cz",
    "build": "hedy -v",
    "deploy": "hedy -v --deploy --test=/_status_check/healthcheck.json",
    "deploy-sequences": "hedy --no-build -no-hints -l latest -l major -l minor",
    "deploy-ci": "hedy -v --deploy --test=/_status_check/healthcheck.json --pkgVersion=ci$CIRCLE_BUILD_NUM -l ci"
  },
  "wsk": {
    "name": "helix-services/content-bus@${version}",
    "memory": 512
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-content-bus"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-content-bus/issues"
  },
  "homepage": "https://github.com/adobe/helix-content-bus#readme",
  "dependencies": {
    "@adobe/helix-fetch": "2.2.0",
    "@adobe/helix-shared-config": "1.0.3",
    "@adobe/helix-shared-utils": "1.0.3",
    "@adobe/helix-shared-wrap": "1.0.0",
    "@adobe/helix-status": "9.1.6",
    "@adobe/helix-universal": "1.4.0",
    "@adobe/helix-universal-logger": "1.0.3",
    "@aws-sdk/client-s3": "3.14.0"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.1.4",
    "@adobe/helix-deploy": "4.3.0",
    "@adobe/helix-testutils": "0.4.5",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/exec": "5.0.0",
    "@semantic-release/git": "9.0.0",
    "chai": "4.3.4",
    "chai-http": "4.3.0",
    "codecov": "3.8.1",
    "commitizen": "4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "8.2.0",
    "eslint": "7.25.0",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.22.1",
    "jsdoc-to-markdown": "7.0.1",
    "junit-report-builder": "3.0.0",
    "lint-staged": "10.5.4",
    "mocha": "8.3.2",
    "nock": "13.0.11",
    "nyc": "15.1.0",
    "proxyquire": "2.1.3",
    "semantic-release": "17.4.2"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
